<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <Button
            android:id="@+id/detailsBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_btn" />

        <Button
            android:id="@+id/statsBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/detailsBtn"
            android:text="@string/stats_btn" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/playerDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" >
    </FrameLayout>

    <ImageView
        android:id="@+id/borderImageView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:contentDescription="border"
        android:src="@drawable/border" />

    <FrameLayout
        android:id="@+id/seasonListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </FrameLayout>

</LinearLayout>